{% extends 'admin/base.html.twig' %}

{# ************ BLOCK HEAD ************ #}
   {% block head %}
       {# ************ BLOCK META ************ #}
       {% block meta %}
           {{ parent() }}

       {% endblock %}

       {# ************ BLOCK TITLE ************ #}
       <title>
           {% block title %}
               {{ parent() }}
               {#Title#}Game : index list
           {% endblock %}
       </title>

       {# ************ BLOCK CSS ************ #}
       {% block css %}
           {{ parent() }}
       {% endblock %}

       {# ************ BLOCK FONTS ************ #}
       {% block fonts %}
           {{ parent() }}
       {% endblock %}

       {# ************ BLOCK FAVICON ************ #}
       {% block favicon %}
           {{ parent() }}
           {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />#}
       {% endblock %}

   {% endblock %}

{# ************ BLOCK BODY ************ #}
{% block body %}
    {# ************ BLOCK HEADER ************ #}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {# HTML HERE #}
    <h1>Game list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Ucname</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                <td>{{ document.name }}</td>
                <td>{{ document.ucname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('game_show', { 'id': document.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('game_edit', { 'id': document.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    {# ************ BLOCK FOOTER ************ #}
    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}

{# ************ BLOCK JAVASCRIPTS ************ #}
{% block javascripts %}
    {{ parent() }}
{% endblock %}