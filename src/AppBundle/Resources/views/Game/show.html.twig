{% extends 'admin/base.html.twig' %}

{# ************ BLOCK HEAD ************ #}
   {% block head %}
       {# ************ BLOCK META ************ #}
       {% block meta %}
           {{ parent() }}

       {% endblock %}

       {# ************ BLOCK TITLE ************ #}
       <title>
           {% block title %}
               {{ parent() }}
               {#Title#}Game : Show details
           {% endblock %}
       </title>

       {# ************ BLOCK CSS ************ #}
       {% block css %}
           {{ parent() }}
       {% endblock %}

       {# ************ BLOCK FAVICON ************ #}
       {% block favicon %}
           {{ parent() }}
           {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />#}
       {% endblock %}

   {% endblock %}

{# ************ BLOCK BODY ************ #}
{% block body %}
    {# ************ BLOCK HEADER ************ #}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {# HTML HERE #}
    <h1>Game</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Ucname</th>
            <td>{{ document.ucname }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('game') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('game_edit', { 'id': document.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('game_delete', { 'id': document.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>

    {# ************ BLOCK FOOTER ************ #}
    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}

{# ************ BLOCK JAVASCRIPTS ************ #}
{% block javascripts %}
    {{ parent() }}
{% endblock %}